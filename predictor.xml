<?xml version="1.0" encoding="UTF-8"?>
<project name="predict00ls" default="all">
  
  
  <property file="predictor.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_com.google.code.gson:gson:2.8.5.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.5/gson-2.8.5.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.11.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.11/junit-4.11.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module predict00ls -->
  
  <dirname property="module.predict00ls.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.predict00ls" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.predict00ls" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.predict00ls" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.predict00ls" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="predict00ls.output.dir" value="${module.predict00ls.basedir}/target/classes"/>
  <property name="predict00ls.testoutput.dir" value="${module.predict00ls.basedir}/target/test-classes"/>
  
  <path id="predict00ls.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="predict00ls.module.production.classpath">
    <path refid="${module.jdk.classpath.predict00ls}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  <path id="predict00ls.runtime.production.module.classpath">
    <pathelement location="${predict00ls.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  <path id="predict00ls.module.classpath">
    <path refid="${module.jdk.classpath.predict00ls}"/>
    <pathelement location="${predict00ls.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  <path id="predict00ls.runtime.module.classpath">
    <pathelement location="${predict00ls.testoutput.dir}"/>
    <pathelement location="${predict00ls.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.predict00ls">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.predict00ls">
    <patternset refid="excluded.from.module.predict00ls"/>
  </patternset>
  
  <path id="predict00ls.module.sourcepath">
    <dirset dir="${module.predict00ls.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
      <include name="target/generated-sources/annotations"/>
    </dirset>
  </path>
  
  <path id="predict00ls.module.test.sourcepath">
    <dirset dir="${module.predict00ls.basedir}">
      <include name="src/test/java"/>
      <include name="target/generated-test-sources/test-annotations"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.predict00ls" depends="compile.module.predict00ls.production,compile.module.predict00ls.tests" description="Compile module predict00ls"/>
  
  <target name="compile.module.predict00ls.production" depends="register.custom.compilers" description="Compile module predict00ls; production classes">
    <mkdir dir="${predict00ls.output.dir}"/>
    <javac2 destdir="${predict00ls.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.predict00ls}/javac">
      <compilerarg line="${compiler.args.predict00ls}"/>
      <bootclasspath refid="predict00ls.module.bootclasspath"/>
      <classpath refid="predict00ls.module.production.classpath"/>
      <src refid="predict00ls.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.predict00ls"/>
    </javac2>
    
    <copy todir="${predict00ls.output.dir}">
      <fileset dir="${module.predict00ls.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.predict00ls.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.predict00ls.basedir}/target/generated-sources/annotations">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.predict00ls.tests" depends="register.custom.compilers,compile.module.predict00ls.production" description="compile module predict00ls; test classes" unless="skip.tests">
    <mkdir dir="${predict00ls.testoutput.dir}"/>
    <javac2 destdir="${predict00ls.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.predict00ls}/javac">
      <compilerarg line="${compiler.args.predict00ls}"/>
      <bootclasspath refid="predict00ls.module.bootclasspath"/>
      <classpath refid="predict00ls.module.classpath"/>
      <src refid="predict00ls.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.predict00ls"/>
    </javac2>
    
    <copy todir="${predict00ls.testoutput.dir}">
      <fileset dir="${module.predict00ls.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.predict00ls.basedir}/target/generated-test-sources/test-annotations">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.predict00ls" description="cleanup module">
    <delete dir="${predict00ls.output.dir}"/>
    <delete dir="${predict00ls.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.predict00ls, clean.artifact.predict00ls:jar" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.predict00ls" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.predict00ls:jar" value="${basedir}/out/artifacts/predict00ls_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.predict00ls.jar" value="${artifacts.temp.dir}/predict00ls.jar"/>
    <property name="temp.jar.path.predict.jar" value="${artifacts.temp.dir}/predict.jar"/>
  </target>
  
  <target name="clean.artifact.predict00ls:jar" description="clean predict00ls:jar artifact output">
    <delete dir="${artifact.output.predict00ls:jar}"/>
  </target>
  
  <target name="artifact.predict00ls:jar" depends="init.artifacts, compile.module.predict00ls" description="Build &#39;predict00ls:jar&#39; artifact">
    <mkdir dir="${artifact.output.predict00ls:jar}"/>
    <jar destfile="${temp.jar.path.predict00ls.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${predict00ls.output.dir}"/>
    </jar>
    <jar destfile="${temp.jar.path.predict.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/src/main/java/ru/itu/predictools/gui/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.predict00ls.jar}" tofile="${artifact.output.predict00ls:jar}/predict00ls.jar"/>
    <copy file="${path.variable.maven_repository}/junit/junit/4.11/junit-4.11.jar" tofile="${artifact.output.predict00ls:jar}/junit-4.11.jar"/>
    <copy file="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar" tofile="${artifact.output.predict00ls:jar}/hamcrest-core-1.3.jar"/>
    <copy file="${temp.jar.path.predict.jar}" tofile="${artifact.output.predict00ls:jar}/predict.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.predict00ls:jar" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>